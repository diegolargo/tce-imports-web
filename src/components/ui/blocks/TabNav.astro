---
// Extract properties from Astro.props
const { aria, dataTab, heading, content } = Astro.props;

// Define TypeScript interface for properties
interface Props {
  dataTab: string;
  aria: string;
  heading?: string;
  content?: string;
}
// Define button classes
const BUTTON_CLASS =
  "dark:hover:bg-neutral-700 rounded-xl p-2 text-start outline-none ring-zinc-500 transition duration-300 hover:bg-neutral-200 focus-visible:ring dark:ring-zinc-200 dark:focus:outline-none md:p-5";

---

<!-- Tab button with dynamic class based on 'first' property, id, tab data, and aria-controls  -->
<button
  type="button"
  class={`${BUTTON_CLASS} border border-zinc-300 dark:border-zinc-700`}
  data-tab={dataTab}
  aria-controls={aria}
  role="tab"
>
  <!-- Slot for additional content -->
  <span class="flex">
    <slot />
    <!-- Container for the heading and content of the tab -->
    <span class="ms-6 grow">
      <!-- Heading of the tab, changes color when active -->
      <span
        class="block text-lg font-bold text-neutral-800 dark:text-neutral-200"
        >{heading}</span
      >
      <!-- Content of the tab, changes color when active -->
      <span
        class="mt-1 text-sm sm:text-xl block text-neutral-500 dark:text-neutral-400"
        >{content}</span
      >
    </span>
  </span>
</button>
